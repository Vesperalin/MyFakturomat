generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Currency {
  PLN
  USD
  EUR
}

enum ItemUnit {
  piece
  hour
  day
  month
  km
  km2
  kg
  other
}

model User {
  id            String    @id @default(cuid())
  email         String    @unique
  name          String?
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  Company       Company?
  Item          Item[]
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id])

  @@unique([provider, providerAccountId])
}

model Company {
  id           String   @id @default(cuid())
  name         String   @db.VarChar(512)
  nip          String   @db.VarChar(10)
  street       String   @db.VarChar(150)
  city         String   @db.VarChar(85)
  postal_code  String   @db.VarChar(16)
  bank_account String   @db.VarChar(50)
  currency     Currency
  country      String   @db.VarChar(60)
  paying_vat   Boolean
  userId       String   @unique
  user         User     @relation(fields: [userId], references: [id])
}

model Item {
  id           String    @id @default(cuid())
  name         String    @db.VarChar(512)
  price_netto  Float
  vat_rate     Float
  price_brutto Float
  currency     Currency
  unit         ItemUnit?
  custom_unit  String?   @db.VarChar(64)
  quantity     Float
  userId       String
  user         User      @relation(fields: [userId], references: [id])
}
